{% extends '::base.html.twig' %}

{% block content_content %}

    <a href="{{ path('customer_new') }}"
       class="btn btn-success">
        New
    </a>

    <table class="table">
        <thead>
        <tr>
            <th>Created At</th>
            <th>Id</th>
            <th>Name</th>
            <th>E-mail</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td></td>
                <td>{{ customer.id }}</td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.address.zipcode }} - {{ customer.address.street }}, {{ customer.address.number }}</td>
                <td>
                    <a href="{{ path('customer_view', {'id': customer.id}) }}" class="btn btn-success">View</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('customer_delete', {'id': customer.id}) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No customer found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}