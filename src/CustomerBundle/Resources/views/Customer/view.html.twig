{% extends 'CustomerBundle::layout.html.twig' %}

{% block content_content %}
    <table class="table">
        <tr>
            <th>Id:</th>
            <td>{{ customer.id }}</td>
        </tr>
        <tr>
            <th>Name:</th>
            <td>{{ customer.name }}</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>{{ customer.email }}</td>
        </tr>
        <tr>
            <th>Zipcode:</th>
            <td>{{ customer.address.zipcode }}</td>
        </tr>
        <tr>
            <th>Street:</th>
            <td>{{ customer.address.street }}</td>
        </tr>
        <tr>
            <th>Number:</th>
            <td>{{ customer.address.number }}</td>
        </tr>
    </table>
    <a href="{{ path('customer_list') }}" class="btn btn-warning">Back</a>
    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-primary">Edit</a>
    <a href="{{ path('customer_delete', {'id': customer.id}) }}" class="btn btn-danger">Delete</a>
{% endblock %}